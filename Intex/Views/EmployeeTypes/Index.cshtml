@model IEnumerable<Intex.Models.EmployeeType>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<div class="section-headlines">
    <h4>Employee Types</h4>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeTypeName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeTypeName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.EmployeeTypeID }) |
                @Html.ActionLink("Details", "Details", new { id = item.EmployeeTypeID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.EmployeeTypeID })
            </td>
        </tr>
    }

</table>
