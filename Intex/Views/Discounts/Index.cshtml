@model IEnumerable<Intex.Models.Discount>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<div class="section-headlines">
    <h4>Discounts</h4>
</div>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DiscountAmount)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DiscountAmount)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.DiscountID }) |
                @Html.ActionLink("Details", "Details", new { id = item.DiscountID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.DiscountID })
            </td>
        </tr>
    }

</table>
